{
  // debug
  "debug": true,

  /**
   * message object
   */
  "message": {
    // message templates
    "template": {
      "default": "dateOnly",

      "dateUnit": {
        "template": "[-date--:-unit--] ::> -prefix-- -message--"
      },

      "dateUnitNumber": {
        "template": "[-date--:-unit--:-number--] ::> -prefix-- -message--"
      },

      "dateOnly": {
        "template": "[-date--] ::> -prefix-- -message--"
      }
    },


    // message types
    "type": {
      "default": {
        "prefix": "",
        "fg": "",
        "bg": ""
      },

      "white": {
        "prefix": "",
        "bg": "#000000",
        "fg": "#ffffff"
      },

      "error": {
        "prefix": "/e/",
        "fg": "#ffffff",
        "bg": "#ff0000"
      },

      "info": {
        "prefix": "/i/",
        "bg": "#000000",
        "fg": "#0FEBFF"
      },

      "debug": {
        "prefix": "/d/",
        "bg": "#E6FF04FF",
        "fg": "#0800F3"
      }
    }
  }
}
